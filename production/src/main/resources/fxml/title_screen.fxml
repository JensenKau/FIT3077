<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninemanmorris.screen.screencontroller.TitleScreenController">
   <children>
      <VBox alignment="CENTER" prefHeight="720.0" prefWidth="860.0" spacing="20.0" style="-fx-background-image: url('file:src/main/resources/img/9mm_title.png'); -fx-background-size: 860;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
         <Button fx:id="startGameButton" minWidth="250.0" onAction="#selectPlayer" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Start Game">
            <font>
               <Font name="Galvji" size="36.0" />
            </font>
         </Button>
         <Button fx:id="instructionButton" minWidth="250.0" onAction="#displayInstruction" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Instructions">
            <font>
               <Font name="Galvji" size="36.0" />
            </font>
         </Button>
         <Button fx:id="quitGameButton" onAction="#quitGame" prefWidth="250.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Quit Game">
            <font>
               <Font name="Galvji" size="36.0" />
            </font>
         </Button>
      </VBox>
      <VBox fx:id="instructionScreen" alignment="CENTER" prefHeight="720.0" prefWidth="860.0" spacing="20.0" style="-fx-background-image: url('file:src/main/resources/img/9mm_instructions.png'); -fx-background-size: 860;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
            <children>
               <AnchorPane prefHeight="614.0" prefWidth="820.0">
                  <children>
                     <Button fx:id="cancelButton" alignment="TOP_RIGHT" layoutX="716.0" layoutY="-41.0" onAction="#closeInstructionScreen" prefHeight="48.0" prefWidth="62.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="X" textAlignment="CENTER" textFill="WHITE">
                        <font>
                           <Font name="System Bold" size="48.0" />
                        </font>
                     </Button>
                  </children>
               </AnchorPane>
            </children>
         </VBox>
      <VBox fx:id="selectScreen" alignment="CENTER" prefHeight="720.0" prefWidth="860.0" spacing="20.0" style="-fx-background-image: url('file:src/main/resources/img/9mm_select.png'); -fx-background-size: 860;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <children>
         <AnchorPane prefHeight="614.0" prefWidth="775.0">
            <children>
               <Button fx:id="player" layoutX="12.0" mnemonicParsing="false" onAction="#startTwoPlayerGame" opacity="0.0" prefHeight="380.0" prefWidth="378.0" style="-fx-cursor: hand;" />
               <Button fx:id="AI" layoutX="421.0" layoutY="1.0" mnemonicParsing="false" onAction="#startOnePlayerGame" opacity="0.0" prefHeight="380.0" prefWidth="378.0" style="-fx-cursor: hand;" />
               <Button fx:id="cancelButton" alignment="TOP_RIGHT" layoutX="716.0" layoutY="-41.0" onAction="#closeSelectScreen" prefHeight="48.0" prefWidth="62.0" style="-fx-background-color: transparent; -fx-cursor: hand;" text="X" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="48.0" />
                  </font>
               </Button>
            </children>
         </AnchorPane>
      </children>
      </VBox>
   </children>
</StackPane>
