<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="860.0" spacing="20.0" style="-fx-background-image: url('file:src/main/resources/img/9mm_title.png'); -fx-background-size: 860;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ninemanmorris.screen.screencontroller.TitleScreenController">
   <children>
      <Button fx:id="startGameButton" minWidth="250.0" onAction="#startTwoPlayerGame" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Start Game">
         <font>
            <Font name="Galvji" size="36.0" />
         </font>
      </Button>
      <Button fx:id="instructionButton" minWidth="250.0" style="-fx-background-color: transparent;" text="Instructions">
         <font>
            <Font name="Galvji" size="36.0" />
         </font>
      </Button>
      <Button fx:id="quitGameButton" prefWidth="250.0" onAction="#quitGame" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Quit Game">
         <font>
            <Font name="Galvji" size="36.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
